<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <input type="text" class="form-control text-center" name="title" placeholder="Title">
      </div>
      <div class="form-group">
        <!-- <input type="text" class="form-control text-center" name="content" placeholder="What's on your mind?"> -->
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Share something!</span>
          </div>
          <textarea class="form-control" aria-label="With textarea" name="content" placeholder="What's on your mind?"></textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-dark">Submit</button>
    </form>


  </div>
</div>
